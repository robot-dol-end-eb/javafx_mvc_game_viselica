      <Label fx:id="currentWordL" text="Слово: " />
      <TextField fx:id="letterTF" />
      <Button fx:id="primaryButton" onAction="#addLetterClick" prefHeight="27.0" prefWidth="96.0" text="Ввести букву" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
